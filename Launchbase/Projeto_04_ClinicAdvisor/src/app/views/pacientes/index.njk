{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">

<div class="header">
    <a class="button" href="/terapeutas/create">Novo</a>
    <form action="/terapeutas" method="GET">
      <input
        type="text"
        name="filter"
        placeholder="Nome ou Atendimento"
        value={{filter}}
        >
      <button type="submit">
        Filtrar
      </button>
    </form>
  </div>

    <a href="/pacientes/create">Novo</a>
  <table width="100%">
    <thead>
      <tr>
        <th>Paciente</th>
        <th>Terapias </th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      {% for paciente in pacientes %}
      <tr>
        <td>
          <span
            style="background-image: url({{ paciente.avatar_url }})">
          </span>
          {{ paciente.name }}</td>
        <td>{{ paciente.services }}</td>
        <td><a href="/pacientes/{{ paciente.id }}">Ver</a></td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <div
    class="pagination"
    data-page={{pagination.page}}
    data-total={{pagination.total}}
    data-filter={{filter}}
    >
  </div>

</div>
{% endblock content %}