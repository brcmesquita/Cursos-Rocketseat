{% extends "layout.njk" %}

{% block content %}
<div class="card">
  <section class="avatar" style="background: url({{ terapeuta.avatar_url }}) no-repeat center center / cover"></section>
  <section class="details">
    <h3>Detalhes</h3>
    <div class="item">
      <div>Terapeuta</div>
      <div>{{ terapeuta.name }}</div>
    </div>
    <div class="item">
      <div>Idade</div>
      <div>{{ terapeuta.age }}</div>
    </div>
     <div class="item">
      <div>Sexo</div>
      <div>{{ "Masculino" if terapeuta.gender == "M" else "Feminino" }}</div>
    </div>
    <div class="item">
      <div>Especialidades</div>
      <div>
        {% for service in terapeuta.services %}
        <span>{{ service }}</span>
        {% endfor %}
      </div>
    </div>
     <div class="item">
      <div>Status</div>
      <div>{{ "Ativo" if terapeuta.working == true else "Inativo" }}</div>
    </div>
     <div class="item">
      <div>Cadastro</div>
      <div>{{ terapeuta.created_at }}</div>
    </div>

    <a href="/terapeutas/{{ terapeuta.id }}/edit" class="button">Editar</a>
  </section>
</div>
{% endblock content %}