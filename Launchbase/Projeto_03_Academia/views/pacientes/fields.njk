<div class="item">
  <div>
    Avatar URL
  </div>
  <div>
    <input
      type="url"
      name="avatar_url"
      placeholder="http://"
      value="{{ paciente.avatar_url}}"
      >
  </div>
</div>

<div class="item">
  <div>
    Paciente
  </div>
  <div>
    <input
      type="text"
      name="name"
      placeholder="Nome completo do Paciente"
      value="{{ paciente.name}}"
      >
  </div>
</div>

<div class="item">
  <div>
    E-mail
  </div>
  <div>
    <input
      type="email"
      name="email"
      placeholder="email@email.com"
      value="{{ paciente.email}}"
      >
  </div>
</div>

<div class="item">
  <div>
    Data de Nascimento
  </div>
  <div>
    <input
      type="date"
      name="birth"
      value="{{ paciente.birth}}"
      >
  </div>
</div>

<div class="item">
  <div>
    Gênero
  </div>
  <div>
    <span>
      <input type="radio" name="gender" value="M"
        {% if paciente.gender == "M" %}
          checked
        {% endif %}
      > Masculino
    </span>
    <span>
      <input type="radio" name="gender" value="F"
        {% if paciente.gender == "F" %}
          checked
        {% endif %}
      > Feminino
      </span>
  </div>
</div>

<div class="item">
  <div>
    Tipo Sanguíneo
  </div>
  <div>
    <select name="blood">
      <option value="A0"  {% if paciente.blood == "A0"%}selected{% endif %}>
        A-
      </option>
      <option value="A1"  {% if paciente.blood == "A1"%}selected{% endif %}>
        A+
      </option>
      <option value="B0"  {% if paciente.blood == "B0"%}selected{% endif %}>
        B-
      </option>
      <option value="B1"  {% if paciente.blood == "B1"%}selected{% endif %}>
        B+
      </option>
      <option value="AB0" {% if paciente.blood == "AB0"%}selected{% endif %}>
        AB-
      </option>
      <option value="AB1" {% if paciente.blood == "AB1"%}selected{% endif %}>
        AB+
      </option>
      <option value="O0"  {% if paciente.blood == "O0"%}selected{% endif %}>
        O-
      </option>
      <option value="O1"  {% if paciente.blood == "O1"%}selected{% endif %}>
        O+
      </option>
    </select>
  </div>
</div>

<div class="item">
  <div>
    Peso (Kg)
  </div>
  <div>
    <input
      type="number"
      name="weight"
      value="{{ paciente.weight}}"
      >
  </div>
</div>

<div class="item">
  <div>
    Altura (cm)
  </div>
  <div>
    <input
      type="number"
      name="height"
      value="{{ paciente.height}}"
      >
  </div>
</div>

<div class="item">
  <div>
    Especialidades
  </div>
  <div>
    <input
      type="text"
      name="services"
      placeholder="Digite as especialidades do paciente"
      value="{{ paciente.services }}"
      >
  </div>
</div>

<button type="submit">Salvar</button>